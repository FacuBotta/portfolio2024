---
import Presentation from "../components/Presentation.astro";
import Layout from "../layouts/Layout.astro";
import SkillCard from "../components/SkillCard.astro";
import IconWrapper from "../components/IconWrapper.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <section
      id="home-section"
      class="w-[90vw] max-w-[1200px] m-auto min-h-screen flex items-center justify-center flex-wrap-reverse pt-40 lg:pt-0"
    >
      <Presentation />
      <img class="w-[500px]" src="./facuImage.png" alt="my photo" />
    </section>

    <section id="skills-section" class="min-h-screen flex justify-center">
      <div id="skills-container" class="text-center pb-[200px]">
        <SkillCard title="Skills" subTitle="Skills I use everyday">
          <IconWrapper
            skill="HTML"
            iconName="HtmlIcon"
            isInLove="true"
            trainingLevel={8}
          />
