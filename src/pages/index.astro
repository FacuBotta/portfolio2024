          />
        </SkillCard>
      </div>
    </section>
    <!-- Contact section =============================== -->
    <section
      class="w-[90vw] max-w-[1100px] m-auto min-h-screen flex items-start justify-start"
    >
      <h2 class="sub-title text-white text-4xl">Contact me</h2>
    </section>

    <script></script>

    <style>
      main {
        margin: auto;
        color: white;
        font-size: 20px;
        line-height: 1.6;
      }
      h2.sub-title {
        font-family: "Fifties", serif;
        font-size: 3rem;
        animation-timeline: view(50% 8%);
        animation-name: animate-sub-title;
        animation-fill-mode: both;
        animation-duration: 1ms;
      }
      @keyframes animate-sub-title {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      #home-section img {
        /* border-radius: 0 0 15% 15%; */
        mask-image: linear-gradient(to bottom, black 80%, transparent);
      }
      .shadow-custom {
        box-shadow: rgb(0, 0, 0) 0px -50px 30px;
      }
      .video-gradient {
        position: absolute;
        background: linear-gradient(to top, black, transparent);
        bottom: -100px;
        left: 0;
        width: 100%;
        height: 100%;
      }
