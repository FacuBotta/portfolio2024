            isInLove="true"
            trainingLevel={7}
          />
          <IconWrapper
            skill="JavaScript"
            iconName="JavaScriptIcon"
            isInLove="true"
            trainingLevel={10}
          />
          <IconWrapper
            skill="TypesCript"
            iconName="TypesCriptIcon"
            isInLove="true"
            trainingLevel={10}
          />
          <IconWrapper
            skill="React"
            iconName="ReactIcon"
            isInLove="true"
            trainingLevel={9}
          />
          <IconWrapper
            skill="Node"
            iconName="NodeIcon"
            isInLove="true"
            trainingLevel={7}
          />
          <IconWrapper
            skill="MySQL"
            iconName="MysqlIcon"
            isInLove="true"
            trainingLevel={7}
          />
        </SkillCard>
        <SkillCard title="Stack" subTitle="Technologies I use at work">
          <IconWrapper
            skill="VS Code"
            iconName="VsCodeIcon"
            isInLove="true"
            trainingLevel={9}
          />
          <IconWrapper
