---
import Presentation from "../components/Presentation.astro";
import Layout from "../layouts/Layout.astro";
import SkillCard from "../components/SkillCard.astro";
import IconWrapper from "../components/IconWrapper.astro";
import ProjectCard from "../components/ProjectCard.astro";
import type { ProjectType } from "../types";
import { projects } from "../data/projects";
import { skills, stack, touching } from "../data/skills";
---

<Layout title="Welcome to Astro.">
  <main>
    <!-- Home section =============================== -->
    <section
      id="home-section"
      class="w-[90vw] max-w-[1100px] m-auto min-h-screen flex items-center justify-center"
    >
      <Presentation />
      <img
        class="w-[500px] rounded-full"
        src="./facuImage.png"
        alt="my photo"
      />
    </section>
    <!-- Projects section =============================== -->
    <section
      id="projects-section"
      class="w-[90vw] max-w-[1100px] m-auto min-h-screen flex flex-col items-start justify-start mb-40"
    >
      <h2 class="animate-in-view text-white">Projects</h2>
      <div class="flex flex-col gap-10 w-full pt-5">
        {
          projects.map((project: ProjectType, index: number) => (
            <ProjectCard {...project} index={index} />
          ))
        }
      </div>
    </section>
    <!-- About me & Skills section =============================== -->
    <section
      id="skills-section"
      class="w-[90vw] max-w-[1100px] mx-auto mb-20 flex divide-x divide-white/50"
    >
      <div class="w-[80%] pr-5">
        <h2 class="animate-in-view text-white text-4xl mb-14">About me</h2>
        <p class="animate-in-view mb-5 text-white/80">
          With over 6 years of freelance experience in Argentina, I've developed
          a strong sense of responsibility and quality work. Leading my teams
          has deepened my appreciation for teamwork and communication.
        </p>
        <p class="animate-in-view mb-5 text-white/80">
          After moving to France in 2019, I worked for 3 years as a manager in a
          restaurant, enhancing my skills in teamwork and task management as
          lead of the team.
        </p>
        <p class="animate-in-view text-white/80">
          Since 2022, I've been pursuing my goal of becoming a web developer and
          am now in my final year of studies as Fullstack developer. I'm excited
          to apply my knowledge in real projects and work with a dev team.
        </p>
      </div>
      <div id="skills-container" class="text-start flex flex-col gap-10 pl-5">
        <SkillCard title="Skills" subTitle="I use everyday">
          {
            skills.map((skill) => (
              <IconWrapper
                skill={skill.skill}
                iconName={skill.iconName}
                isInLove={skill.isInLove}
                trainingLevel={skill.trainingLevel}
              />
            ))
          }
        </SkillCard>
        <SkillCard title="Stack" subTitle="Technologies I use at work">
          {
            stack.map((skill) => (
              <IconWrapper
                skill={skill.skill}
                iconName={skill.iconName}
                isInLove={skill.isInLove}
                trainingLevel={skill.trainingLevel}
              />
            ))
          }
        </SkillCard>
        <SkillCard title="Touching" subTitle="I'm learn and/or testing">
          {
            touching.map((skill) => (
              <IconWrapper
                skill={skill.skill}
                iconName={skill.iconName}
                isInLove={skill.isInLove}
                trainingLevel={skill.trainingLevel}
              />
            ))
          }
        </SkillCard>
      </div>
    </section>
    <!-- Contact section =============================== -->
    <section
      class="w-[90vw] max-w-[1100px] m-auto min-h-screen flex items-start justify-start"
    >
      <h2 class="animate-in-view text-white text-4xl">Contact me</h2>
    </section>

    <script></script>

    <style>
      main {
        margin: auto;
        color: white;
        font-size: 20px;
        line-height: 1.6;
      }
      .animate-in-view {
        animation-timeline: view();
        animation-name: animate-in-view;
        animation-fill-mode: initial;
        animation-duration: 1ms;
      }
      h2 {
        font-family: "Fifties", serif;
        font-size: 3rem;
      }
      @keyframes animate-in-view {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      #home-section img {
        /* border-radius: 0 0 15% 15%; */
        mask-image: linear-gradient(to bottom, black 80%, transparent);
      }
      .shadow-custom {
        box-shadow: rgb(0, 0, 0) 0px -50px 30px;
      }
      .video-gradient {
        position: absolute;
        background: linear-gradient(to top, black, transparent);
        bottom: -100px;
        left: 0;
        width: 100%;
        height: 100%;
      }
      /* .h1-welcome span {
    text-shadow:
      2px 2px 1px rgb(195, 99, 255),
      2px -1px 1px rgb(195, 99, 255),
      -1px 1px 1px rgb(195, 99, 255),
      -1px -1px 1px rgb(195, 99, 255);
  } */
    </style>
  </main>
</Layout>
