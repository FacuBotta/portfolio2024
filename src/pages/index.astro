---
import Presentation from "../components/Presentation.astro";
import Layout from "../layouts/Layout.astro";
import SkillCard from "../components/SkillCard.astro";
import IconWrapper from "../components/IconWrapper.astro";
import ProjectCard from "../components/ProjectCard.astro";
import type { ProjectType } from "../types";
import { projects } from "../data/projects";
---

<Layout title="Welcome to Astro.">
  <main>
    <!-- Home section =============================== -->
    <section
      id="home-section"
      class="w-[90vw] max-w-[1100px] m-auto min-h-screen flex items-center justify-center"
    >
      <Presentation />
      <img
        class="w-[500px] rounded-full"
        src="./facuImage.png"
        alt="my photo"
      />
    </section>
    <!-- Projects section =============================== -->
    <section
      id="projects-section"
      class="w-[90vw] max-w-[1100px] m-auto min-h-screen flex flex-col items-start justify-start mb-40"
    >
      <h2 class="sub-title text-white">Projects</h2>
      <div class="flex flex-col gap-10 w-full pt-5">
        {
          projects.map((project: ProjectType, index: number) => (
            <ProjectCard {...project} index={index} />
          ))
        }
      </div>
    </section>
    <!-- Skills section =============================== -->
    <section
      id="skills-section"
      class="min-h-screen w-[90vw] max-w-[1100px] m-auto flex flex-col"
    >
      <h2 class="sub-title text-white text-4xl mb-20">About me</h2>

      <div id="skills-container" class="text-start flex flex-col gap-10">
        <SkillCard title="Skills" subTitle="I use everyday">
          <IconWrapper
            skill="HTML"
            iconName="HtmlIcon"
            isInLove="true"
            trainingLevel={8}
          />
          <IconWrapper
            skill="CSS"
            iconName="CssIcon"
            isInLove="true"
            trainingLevel={7}
          />
          <IconWrapper
            skill="Tailwind"
            iconName="TailwindIcon"
            isInLove="true"
            trainingLevel={7}
          />
          <IconWrapper
            skill="JavaScript"
            iconName="JavaScriptIcon"
            isInLove="true"
            trainingLevel={10}
          />
          <IconWrapper
            skill="TypesCript"
            iconName="TypesCriptIcon"
            isInLove="true"
            trainingLevel={10}
          />
          <IconWrapper
            skill="React"
            iconName="ReactIcon"
            isInLove="true"
            trainingLevel={9}
          />
          <IconWrapper
            skill="Node"
            iconName="NodeIcon"
            isInLove="true"
            trainingLevel={7}
          />
          <IconWrapper
            skill="MySQL"
            iconName="MysqlIcon"
            isInLove="true"
            trainingLevel={7}
          />
        </SkillCard>
        <SkillCard title="Stack" subTitle="Technologies I use at work">
          <IconWrapper
            skill="VS Code"
            iconName="VsCodeIcon"
            isInLove="true"
            trainingLevel={9}
          />
          <IconWrapper
            skill="Git"
            iconName="GitColoredIcon"
            isInLove="true"
            trainingLevel={8}
          />
          <IconWrapper
            skill="NPM"
            iconName="NpmIcon"
            isInLove="true"
            trainingLevel={7}
          />
          <IconWrapper
            skill="Docker"
            iconName="DockerIcon"
            isInLove="true"
            trainingLevel={5}
          />
          <IconWrapper
            skill="VirtualBox"
            iconName="VirtualBoxIcon"
            isInLove="true"
            trainingLevel={6}
          />
          <IconWrapper
            skill="Linux"
            iconName="LinuxIcon"
            isInLove="true"
            trainingLevel={4}
          />
          <IconWrapper
            skill="Figma"
            iconName="FigmaIcon"
            isInLove="false"
            trainingLevel={5}
          />
        </SkillCard>
        <SkillCard title="Touching" subTitle="I'm learn and/or testing">
          <IconWrapper
            skill="Next.js"
            iconName="NextJsIcon"
            isInLove="true"
            trainingLevel={7}
          />
