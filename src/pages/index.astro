      </div>
    </section>
    <section id="projects-section" class="h-screen w-full flex justify-center">
      <h2 class="sub-title text-white text-4xl">Projects</h2>
    </section>
    <!-- About section -->
    <section class="min-h-screen flex justify-center">
      <h2 class="sub-title text-white text-4xl">About</h2>
