            trainingLevel={10}
          />
          <IconWrapper
            skill="React"
            iconName="ReactIcon"
            isInLove="true"
            trainingLevel={9}
          />
          <IconWrapper
            skill="Node"
            iconName="NodeIcon"
            isInLove="true"
            trainingLevel={7}
          />
          <IconWrapper
            skill="MySQL"
            iconName="MysqlIcon"
            isInLove="true"
            trainingLevel={7}
          />
        </SkillCard>
        <SkillCard title="Stack" subTitle="Technologies I use">
          <IconWrapper
            skill="VS Code"
