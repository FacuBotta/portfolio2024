---
import Presentation from "../components/Presentation.astro";
import Layout from "../layouts/Layout.astro";
import SkillCard from "../components/SkillCard.astro";
import IconWrapper from "../components/IconWrapper.astro";
import ProjectCard from "../components/ProjectCard.astro";
import type { ProjectType } from "../types";
import { projects } from "../data/projects";
---

<Layout title="Welcome to Astro.">
  <main>
    <!-- Home section =============================== -->
    <section
      id="home-section"
      class="w-[90vw] max-w-[1100px] m-auto min-h-screen flex items-center justify-center"
    >
      <Presentation />
      <img
        class="w-[500px] rounded-full"
        src="./facuImage.png"
        alt="my photo"
      />
    </section>
    <!-- Projects section =============================== -->
    <section
      id="projects-section"
      class="w-[90vw] max-w-[1100px] m-auto min-h-screen flex flex-col items-start justify-start mb-40"
    >
      <h2 class="sub-title text-white">Projects</h2>
      <div class="flex flex-col gap-10 w-full pt-5">
        {
          projects.map((project: ProjectType, index: number) => (
            <ProjectCard {...project} index={index} />
          ))
        }
      </div>
    </section>
    <!-- About me & Skills section =============================== -->
    <section
      id="skills-section"
      class="w-[90vw] max-w-[1100px] mx-auto mb-20 flex divide-x divide-white/50"
    >
      <div class="w-[70%] pr-5">
        <h2 class="sub-title text-white text-4xl mb-5">About me</h2>
        <p class="mb-5 text-white/80">
          With over 6 years of freelance experience in Argentina, I've developed
          a strong sense of responsibility and quality work. Leading my teams
          has deepened my appreciation for teamwork and communication.
        </p>
        <p class="mb-5 text-white/80">
          After moving to France in 2019, I worked for 3 years as a manager in a
          restaurant, enhancing my skills in teamwork and task management as
          lead of the team.
        </p>
        <p class="text-white/80">
          Since 2022, I've been pursuing my goal of becoming a web developer and
          am now in my final year of studies as Fullstack developer. I'm excited
          to apply my knowledge in real projects and work with a dev team.
        </p>
      </div>
      <div id="skills-container" class="text-start flex flex-col gap-10 pl-5">
        <SkillCard title="Skills" subTitle="I use everyday">
          <IconWrapper
            skill="HTML"
            iconName="HtmlIcon"
            isInLove="true"
            trainingLevel={8}
          />
          <IconWrapper
            skill="CSS"
            iconName="CssIcon"
            isInLove="true"
            trainingLevel={7}
          />
          <IconWrapper
            skill="Tailwind"
