---
import { studies } from '../data/myDescription';
import StudyCard from './StudyCard.astro';
---

<div class="relative flex w-full min-h-64 mb-40 overflow-hidden select-none">
  <div
    class="animate-slide w-full overflow-scroll lg:overflow-hidden flex pl-10 lg:pl-20 pr-10 no-scrollbar whitespace-nowrap cursor-grab"
  >
    {studies.map((studie) => <StudyCard studie={studie} />)}
  </div>
  <div class="absolute h-[1px] w-full bg-primary-cyan top-20 z-0"></div>
</div>

<style>
  .animate-slide {
    scroll-behavior: smooth;

    &:before,
    &:after {
      position: absolute;
      top: 0;
      z-index: 100;
      content: '';
      display: block;
      width: 100px;
      height: 100%;
    }

    &:before {
      left: 0;
      background: linear-gradient(90deg, black, transparent);
    }

    &:after {
      right: 0;
      background: linear-gradient(-90deg, black, transparent);
    }
  }

  .cursor-grab {
    cursor: grab;
    cursor-width: 20px;
  }
  .cursor-grabbing {
    cursor: grabbing;
  }
</style>

<script>
  // Verifica que el DOM estÃ© cargado antes de manipular el elemento
  document.addEventListener('DOMContentLoaded', () => {
    const slider = document.querySelector(
      '.animate-slide'
    ) as HTMLDivElement | null;

    if (!slider) return; // Asegura que slider no es null

    let isDown = false;
    let startX = 0;
    let scrollLeft = 0;

    const end = () => {
      isDown = false;
      slider.classList.remove('cursor-grabbing');
      slider.classList.add('cursor-grab');
    };
    const start = (e: MouseEvent) => {
      isDown = true;
      slider.classList.add('cursor-grabbing');
      slider.classList.remove('cursor-grab');
      startX = e.pageX - slider.offsetLeft;
      scrollLeft = slider.scrollLeft;
    };
    const move = (e: MouseEvent) => {
      if (!isDown) return;
      e.preventDefault();
      const x = e.pageX - slider.offsetLeft;
      const walk = (x - startX) * 2;
      slider.scrollLeft = scrollLeft - walk;
    };

    (() => {
      slider.addEventListener('mousedown', start);

      slider.addEventListener('mousemove', move);

      slider.addEventListener('mouseleave', end);
      slider.addEventListener('mouseup', end);
    })();
  });
</script>
