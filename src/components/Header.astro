---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import LanguageSwitch from "./LanguageSwitch.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header
  class="text-white fixed z-50 top-0 left-0 w-full h-14 bg-black/70 backdrop-blur-sm border-b border-primary-yellow transition-all duration-300 ease-in-out hover:bg-black/90"
>
  <div class="flex justify-between items-end h-full max-w-[1100px] m-auto">
    <LanguageSwitch />
    <nav>
      <ul class="flex items-center gap-4 text-xl font-semibold">
        <li>
          <a class="hover:text-primary-cyan" href="#home-section"
            >{t("nav.home")}</a
          >
        </li>
        <li>
          <a class="hover:text-primary-cyan" href="#projects-section"
            >{t("nav.projects")}</a
          >
        </li>
        <li>
          <a class="hover:text-primary-cyan" href="#skills-section"
            >{t("nav.about")}</a
          >
        </li>
        <li>
          <a class="hover:text-primary-cyan" href="#contact-section"
            >{t("nav.contact")}</a
          >
        </li>
      </ul>
    </nav>
  </div>
</header>
