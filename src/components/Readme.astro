---
import { getEntry } from "astro:content";

const projectSlug = Astro.props.projectSlug;

const readme = await getEntry("projects", projectSlug);

if (!readme) {
  throw new Error(`El archivo .md no fue encontrado.`);
}

const { render } = readme;
const { Content } = await render();
---

<article
  class="prose absolute top-40 right-20 prose-headings:text-white prose-xl text-white/60 border p-10 bg-black/70"
>
  <Content />
</article>
